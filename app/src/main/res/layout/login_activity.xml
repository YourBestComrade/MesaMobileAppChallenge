<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/layered_waves">

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="250dp"
        android:layout_height="93dp"
        android:background="@color/blackPrimary"
        android:fontFamily="sans-serif"
        android:text="@string/appTitle"
        android:textAlignment="center"
        android:textColor="@color/whitePrimary"
        android:textSize="58sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.239" />

    <EditText
        android:id="@+id/editTextNumberPassword"
        android:layout_width="192dp"
        android:layout_height="50dp"
        android:layout_marginTop="72dp"
        android:background="@color/blackSecondary"
        android:ems="10"
        android:hint="@string/passwordPrompt"
        android:importantForAutofill="no"
        android:inputType="numberPassword"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textColorHighlight="@color/redPrimary"
        android:textColorHint="@color/hintColor"
        android:textColorLink="@color/redSecondary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginTextView" />

    <TextView
        android:id="@+id/errorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberPassword" />

    <ImageButton
        android:id="@+id/loginButton"
        android:layout_width="128dp"
        android:layout_height="87dp"
        android:background="@color/blackSecondary"
        android:contentDescription="Unlock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberPassword"
        app:layout_constraintVertical_bias="0.184"
        app:srcCompat="@android:drawable/ic_lock_lock"
        app:tint="@color/redSecondary" />

</androidx.constraintlayout.widget.ConstraintLayout>